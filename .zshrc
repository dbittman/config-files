  ping -c 1 google.com &>/dev/null
  if [[ $? -ne 0 ]]; then
    curl ifconfig.me &>/dev/null
    if [[ $? -ne 0 ]]; then
      echo error: could not establish a working internet connection
      return
    fi
  fi
  
  sudo yaourt -Syua

}

